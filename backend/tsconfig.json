{
  "compilerOptions": {
    "paths": {
      "@/*": ["./*"],
      "src/*": ["./src/*"]
    },
    "typeRoots": ["./@types", "./node_modules/@types"],
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "skipLibCheck": true,
    "allowImportingTsExtensions": true,
    "noEmit": true
  }
}
